generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  password      String
  name          String?
  role          String      @default("user")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  portfolios    Portfolio[]
}

model Portfolio {
  id           String        @id @default(cuid())
  name         String
  baseFiat     String        @default("USD")
  ownerId      String
  owner        User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
  buyBands     BuyBand[]
  dcaZones     DcaZone[]
  snapshots    PortfolioSnapshot[]

  @@index([ownerId])
}

model PortfolioSnapshot {
  id                String   @id @default(cuid())
  portfolioId       String
  portfolio         Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  timestamp         DateTime @default(now())
  valueUsd          Decimal  @db.Decimal(18, 8)
  costBasisUsd      Decimal  @db.Decimal(18, 8)
  unrealizedPnl     Decimal  @db.Decimal(18, 8)
  unrealizedPct     Decimal  @db.Decimal(18, 8)
  positionsSnapshot Json

  @@index([portfolioId])
  @@index([timestamp])
}

model Asset {
  id                String          @id @default(cuid())
  symbol            String          @unique
  name              String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  baseTransactions  Transaction[]   @relation("BaseAsset")
  quoteTransactions Transaction[]   @relation("QuoteAsset")
  feeTransactions   Transaction[]   @relation("FeeAsset")
  snapshots         PriceSnapshot[]
  buyBands          BuyBand[]
}

model Transaction {
  id            String    @id @default(cuid())
  type          String    // BUY, SELL, SWAP, DEPOSIT, WITHDRAW, FEE
  portfolioId   String
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  timestamp     DateTime
  venue         String?
  notes         String?

  // Base asset (BUY, SELL, SWAP, DEPOSIT, WITHDRAW)
  baseAssetId   String?
  baseAsset     Asset?    @relation("BaseAsset", fields: [baseAssetId], references: [id])
  baseQty       Decimal?  @db.Decimal(18, 8)

  // Quote asset (BUY, SELL, SWAP)
  quoteAssetId  String?
  quoteAsset    Asset?    @relation("QuoteAsset", fields: [quoteAssetId], references: [id])
  quoteQty      Decimal?  @db.Decimal(18, 8)

  // Price (BUY, SELL — optional)
  price         Decimal?  @db.Decimal(18, 8)

  // Fee (optional em BUY, SELL, SWAP, DEPOSIT, WITHDRAW — obrigatório em FEE)
  feeAssetId    String?
  feeAsset      Asset?    @relation("FeeAsset", fields: [feeAssetId], references: [id])
  feeQty        Decimal?  @db.Decimal(18, 8)

  // Cost basis USD (DEPOSIT, WITHDRAW)
  costBasisUsd  Decimal?  @db.Decimal(18, 8)

  // Valor USD real do swap (crypto-crypto)
  // Obrigatório para swap crypto-crypto, opcional para swap pra stable
  valueUsd      Decimal?  @db.Decimal(18, 8)

  createdAt     DateTime  @default(now())

  @@index([portfolioId])
  @@index([baseAssetId])
  @@index([quoteAssetId])
  @@index([timestamp])
}

model PriceSnapshot {
  id        String   @id @default(cuid())
  price     Decimal  @db.Decimal(18, 8)
  source    String   @default("manual")
  assetId   String
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([assetId])
  @@index([createdAt])
}

model BuyBand {
  id          String    @id @default(cuid())
  targetPrice Decimal   @db.Decimal(18, 8)
  quantity    Decimal   @db.Decimal(18, 8)
  executed    Boolean   @default(false)
  order       Int       @default(0)
  assetId     String
  asset       Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)
  portfolioId String
  portfolio   Portfolio  @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  alerts      BuyBandAlert[]

  @@unique([portfolioId, assetId, order])
  @@index([assetId])
  @@index([portfolioId])
}

model DcaZone {
  id             String     @id @default(cuid())
  priceMin       Decimal    @db.Decimal(18, 8)
  priceMax       Decimal    @db.Decimal(18, 8)
  percentualBase Decimal    @db.Decimal(5, 2)
  label          String?
  order          Int        @default(1)
  executed       Boolean    @default(false)
  assetSymbol    String
  portfolioId    String
  portfolio      Portfolio  @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  preOrders      PreOrder[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@unique([portfolioId, assetSymbol, order])
  @@index([portfolioId])
}

model PreOrder {
  id          String   @id @default(cuid())
  targetPrice Decimal  @db.Decimal(18, 8)
  value       Decimal  @db.Decimal(18, 8)
  active      Boolean  @default(true)
  executed    Boolean  @default(false)
  zoneOrder   Int
  assetSymbol String
  portfolioId String
  dcaZone     DcaZone? @relation(fields: [dcaZoneId], references: [id], onDelete: Cascade)
  dcaZoneId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([portfolioId])
  @@index([assetSymbol])
  @@index([active])
}

model BuyBandAlert {
  id          String   @id @default(cuid())
  buyBandId   String
  buyBand     BuyBand  @relation(fields: [buyBandId], references: [id], onDelete: Cascade)
  symbol      String
  targetPrice Decimal  @db.Decimal(18, 8)
  currentPrice Decimal @db.Decimal(18, 8)
  message     String
  read        Boolean  @default(false)
  notified    Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([buyBandId])
  @@index([read])
  @@index([createdAt])
}
